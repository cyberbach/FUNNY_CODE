<Window x:Class="MyConsoleApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyConsoleApp1"
        mc:Ignorable="d"
        Title="System Monitor" Height="450" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="#FF1E1E1E" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#FF2D2D30" CornerRadius="0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="System Monitor" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                <Button Content="âœ•" Width="30" Height="30" Click="CloseButton_Click" HorizontalAlignment="Right"
                        Margin="0,0,0,0" Background="Transparent" BorderBrush="Transparent" Foreground="White"
                        FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Tab Selection -->
        <Border Grid.Row="1" Background="#FF252526" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="CpuTabButton" Content="Processor" Width="100" Height="30"
                        Click="CpuTabButton_Click" Background="#FF0078D7" Foreground="White"
                        BorderBrush="#FF0063B1" FontWeight="Bold"/>
                <Button x:Name="MemoryTabButton" Content="Memory" Width="100" Height="30"
                        Click="MemoryTabButton_Click" Background="#FF2D2D30" Foreground="White"
                        BorderBrush="#FF2D2D30" Margin="5,0,0,0"/>
                <Button x:Name="NetworkTabButton" Content="Network" Width="100" Height="30"
                        Click="NetworkTabButton_Click" Background="#FF2D2D30" Foreground="White"
                        BorderBrush="#FF2D2D30" Margin="5,0,0,0"/>
                <Button x:Name="GpuTabButton" Content="GPU" Width="100" Height="30"
                        Click="GpuTabButton_Click" Background="#FF2D2D30" Foreground="White"
                        BorderBrush="#FF2D2D30" Margin="5,0,0,0"/>
                <Button x:Name="GpuMemoryTabButton" Content="GPU-Memory" Width="100" Height="30"
                        Click="GpuMemoryTabButton_Click" Background="#FF2D2D30" Foreground="White"
                        BorderBrush="#FF2D2D30" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Monitoring Area -->
        <Border Grid.Row="2" Background="#FF1E1E1E" Margin="10" CornerRadius="5">
            <Canvas x:Name="MonitorCanvas" Background="#FF1E1E1E" ClipToBounds="True"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#FF2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TimeText" Foreground="White" Margin="0,0,20,0"/>
                <TextBlock x:Name="UserText" Foreground="White"/>
                <TextBlock x:Name="SystemInfoText" Foreground="White" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
