<Window x:Class="TGHistoryRipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TGHistoryRipper"
        Title="TG History Ripper" Height="380" Width="600"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="2" Background="#F5F5F5" Margin="0,0,0,15" Padding="20">
            <TextBlock Text="Перетащите JSON файл сюда" 
                   HorizontalAlignment="Center" FontSize="16"/>
        </Border>

        <TextBlock Grid.Row="1" x:Name="FileNameText" 
                   Text="Файл не выбран" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15" Foreground="Gray"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,0">
            <TextBlock Text="Ключи для удаления:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="KeysTextBox" Width="450" Padding="5" 
                Text="type, date_unixtime, date, edited, edited_unixtime, from, from_id, photo, photo_file_size, width, height, text_entities, reactions, file, file_name, file_size, thumbnail, thumbnail_file_size, media_type, duration_seconds"/>
        </StackPanel>

        <TextBlock Grid.Row="3" 
                   Text="(через запятую, например: type, date, from)" 
                   HorizontalAlignment="Center" 
                   Margin="0,5,0,15" Foreground="Gray" FontSize="11"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,0">
            <TextBlock Text="Сохранить по хештегу:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="HashtagTextBox" Width="450" Padding="5"
                 Text="Unity, Blender, ZBrush, Cinema4D, 3dsMax, Houdini, SketchUp, Maya, Marvelous, эффекты, курс, модель, текстура, звук, Unreal, Substance"/>
        </StackPanel>

        <TextBlock Grid.Row="5" 
                   Text="(через запятую, например: Unity, курс, Python)" 
                   HorizontalAlignment="Center" 
                   Margin="0,5,0,15" Foreground="Gray" FontSize="11"/>

        <TextBlock Grid.Row="6" x:Name="StatusText" 
                   Text="" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Foreground="Green"/>

        <Button Grid.Row="7" Content="Сохранить" Click="SaveButton_Click" 
                HorizontalAlignment="Center" Padding="30,10" Margin="0,10,0,0"/>
    </Grid>
</Window>
